<div class="hero-unit">
  <h1>Please Login</h1>
  <hr>
  <br>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal", :style => "background: url('/assets/map-wide.png') no-repeat;"}) do |f| %>

    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :class => 'password_field', :placeholder => "Company Email Address"%>
      </div>
    </div>
  
    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'password_field' %>
      </div>
    </div>

    <!-- <% if devise_mapping.rememberable? -%>
       <div class="control-group">
         <%#= f.label :remember_me, :class => "control-label" %>
         <div class="controls">
           <%#= f.check_box :remember_me %>
         </div>
       </div>  
     <% end -%> -->

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Login", :class => "btn-inverse btn-large" %>
      </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    
  <% end %>
<%#= render "devise/shared/links" %>
</div>
