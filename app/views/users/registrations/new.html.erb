<h2>Company Registration</h2>
<hr>
<br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

  <% unless resource.errors.blank? %>
    <div class="alert alert-error"><%= devise_error_messages! %></div>
  <% end %>  
  
  <div class="control-group">
    <%= f.label :company_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :company_name, :class => 'text_field',:autofocus => true, :placeholder => "Your company name" %>
    </div>
  </div>
  
  <div class="control-group">
    <%#= f.label :name, :class => 'control-label' %>
    <div class="input-prepend">
      <span class="add-on">http://www.contaktus.com/</span>
      <%= f.text_field :name, :class => 'text_field span4', :placeholder => "Company handle" %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :company_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :company_url, :class => 'text_field', :placeholder => "http://www.companyname.com" %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'email_field', :placeholder => "Official E-Mail address" %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'password_field', :placeholder => "minimum 6 characters" %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'password_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Register", :class => "btn center" %>
    </div>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
